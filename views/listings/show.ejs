<%  layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-4 mt-3">
    <h3>Listings Details :</h3>
</div>
    <div class="card col-4 offset-4 show-card" >
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <p class="card-text">
           <b><%= listing.title %></b><br>
           <%= listing.description %><br>
           &#8377; <%= parseFloat(listing.price).toLocaleString("en-IN") %><br>
           <%= listing.location %><br>
           <%= listing.country %> 
        </p>
      </div>
    </div>
  <br>
  </div>
  <div class="btns mb-4">
    <a href="/listings/<%= listing._id %>/edit " class="btn btn-dark col-1 offset-4 edit-btn">Edit </a>

      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
    </form>
    </div>
  </div>


   

