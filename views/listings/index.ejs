<%  layout("/layouts/boilerplate") %>
<body>
    <h3>All Listings</h3>
   <!-- <form method="GET" action="/listings/new">
    <button>Create New Listings</button>
   </form> -->
   <div class="row row-cols-lg-3 row-cals-md-3 row-cols-sm-1">
    <% for(let listing of allListings) { %>
        <div class="card col" style="width: 20rem;">
         <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
     
         <div class="card-body">
           <p class="card-text">
             <%= listing.title%><br>
             &#8377; <%= parseFloat(listing.price).toLocaleString("en-IN") %> / night
     
           </p>
         </div>
       </div>
      <% } %>
   </div>

   
   
