    <% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
     <div class="col-5 offset-3">
    <br><br>
    <h3>Create a New Listtings</h3>
    <form method="POST" action="/listings">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input 
        name="listing[title]" 
        placeholder="enter title" 
        type="text" 
        class="form-control"/>
        </div>

        <div class="mb-3"> 
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]"  class="form-control"></textarea>
        </div>
    
        <div class="mb-3"> 
         <label for="image" class="form-label">Image Link</label>
        <input name="listing[image]" placeholder="enter image URL/link" type="text" class="form-control"/>
       </div>
        <div class="row">
        <div class="mb-3 col-md-4">
        <label for="Price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="enter price" type="number" class="form-control"/>
         </div>

        <div class="mb-3 col-md-8">
        <label for="Country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="enter country" type="text" class="form-control"/>
        </div>
    </div>
        
        <div class="mb-3">
        <label for="Location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="enter location" type="text"  class="form-control"/>
        </div>
        <br><br>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br>
    </form>
</div>
</div>